<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#7adfb8"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="个人中心" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/circle_images"
            android:id="@+id/user_img"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:background="@drawable/touxiang" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_weight="14"
            android:textSize="20dp"
            android:text="16867823455"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7adfb8"
        android:alpha="0.2"
        android:layout_margin="15dp"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/dizhi" />

            <TextView
                android:id="@+id/my_dizhi"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="我的地址"/>

            <ImageButton
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/xiangxi" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7adfb8"
            android:alpha="0.2"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/jianyi" />

            <TextView
                android:id="@+id/my_jianyi"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="建议箱"/>

            <ImageButton
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/xiangxi" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7adfb8"
            android:alpha="0.2"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >
            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/zhaopin"
                />
            <TextView
                android:id="@+id/my_zhaopin"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="校园招聘"/>
            <ImageButton
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/xiangxi" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7adfb8"
            android:alpha="0.2"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >
            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/shezhi"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="设置"/>
            <ImageButton
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/xiangxi" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>